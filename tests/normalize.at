  threads[[1]] = create_thread(5, "bb", "??", "??", "??", "??");
  threads[[2]] = create_thread(5, "aa", "cc", "??", "??", "??");
  threads[[3]] = create_thread(5, "bb", "??", "??", "??", "??");

  threads[[4]] = sr_gdb_thread_dup(threads[[0]], false);
  threads[[5]] = sr_gdb_thread_dup(threads[[1]], false);
